{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "size": "Large",
                  "weight": "Bolder",
                  "text": "**EXPENSE APPROVAL**",
                  "wrap": true,
                  "style": "heading"
                }
              ],
              "width": "stretch"
            }
          ]
        }
      ],
      "bleed": true
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "Input.Text",
                  "placeholder": "Title",
                  "id": "title",
                  "style": "text"
                }
              ],
              "width": "stretch"
            }
          ]
        },
        {
          "type": "ColumnSet",
          "spacing": "Large",
          "columns": [{
            "type": "Column",
              "items": [
                  {
                    "type":"Input.Date",
                    "id": "from",
                    "placeholder": "From Date:",
                    "value": ""
                  },
                  {
                    "type":"Input.Date",
                    "id": "to",
                    "placeholder": "To Date:",
                    "value": ""
                  },
                  {
                    "type":"Input.Text",
                    "id": "amount",
                    "placeholder": "Amount to be reimbursed:",
                    "value": ""
                  },
                  {
                    "type": "Input.ChoiceSet",
                    "choices": [],
                    "choices.data": {
                     "type": "Data.Query",
                     "dataset": "graph.microsoft.com/users"
                    },
                    "id": "peoplePickerManager",
                    "value": "<Azure AD ID 1>",
                    "isMultiSelect": true,
                    "placeholder": "Awaiting approval from"
                  },
                  {
                    "type": "Input.ChoiceSet",
                    "choices": [],
                    "choices.data": {
                     "type": "Data.Query",
                     "dataset": "graph.microsoft.com/users"
                    },
                    "id": "peoplePickerEmployees",
                    "value": "<Azure AD ID 1>",
                    "isMultiSelect": true,
                    "placeholder": "Members to split the amount equally"
                  }
              ],
              "width": "stretch"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Submit Bills",
      "verb": "addbill",
      "fallback": "Action.Submit"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2",
  "fallbackText": "This card requires Adaptive Cards v1.2 support to be rendered properly."
}
