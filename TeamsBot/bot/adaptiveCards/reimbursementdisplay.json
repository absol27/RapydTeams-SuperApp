{
    "type": "AdaptiveCard",
    "body": [
      {
        "type": "Container",
        "style": "emphasis",
        "items": [
          {
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column",
                "items": [
                  {
                    "type": "TextBlock",
                    "size": "Large",
                    "weight": "Bolder",
                    "text": "**EXPENSE APPROVAL**",
                    "wrap": true,
                    "style": "heading"
                  }
                ],
                "width": "stretch"
              },
              {
                "type": "Column",
                "items": [
                  {
                    "type": "Image",
                    "url": "${status_url}",
                    "altText": "${status}",
                    "height": "30px"
                  }
                ],
                "width": "auto"
              }
            ]
          }
        ],
        "bleed": true
      },
      {
        "type": "Container",
        "items": [
          {
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column",
                "items": [
                  {
                    "type": "TextBlock",
                    "size": "ExtraLarge",
                    "text": "${title}",
                    "wrap": true,
                    "style": "heading"
                  }
                ],
                "width": "stretch"
              }
            ]
          },
          {
            "type": "FactSet",
            "spacing": "Large",
            "facts": [
              {
                "title": "Submitted By",
                "value": "**${byname}**"
              },
              {
                "title": "Split By",
                "value": "${fellowEmployeesCount}"
              },
              {
                "title": "Duration",
                "value": "${from} - ${to}"
              },
              {
                "title": "Submitted On",
                "value": "${today}"
              },
              {
                "title": "Reimbursable Amount",
                "value": "${amount}"
              }
            ]
          }
        ]
      },
      {
        "type": "Container",
        "spacing": "Large",
        "style": "emphasis",
        "items": [
          {
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column",
                "spacing": "Large",
                "items": [
                  {
                    "type": "TextBlock",
                    "weight": "Bolder",
                    "text": "CATEGORY",
                    "wrap": true
                  }
                ],
                "width": "stretch"
              },
              {
                "type": "Column",
                "items": [
                  {
                    "type": "TextBlock",
                    "weight": "Bolder",
                    "text": "AMOUNT",
                    "wrap": true
                  }
                ],
                "width": "auto"
              }
            ]
          }
        ],
        "bleed": true
      },
      {
        "$data": "${bills}",
        "type": "Container",
        "items": [
          {
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column",
                "spacing": "Medium",
                "items": [
                  {
                    "type": "TextBlock",
                    "text": "${subject}",
                    "wrap": true
                  }
                ],
                "width": "stretch"
              },
              {
                "type": "Column",
                "items": [
                  {
                    "type": "TextBlock",
                    "text": "${price}",
                    "wrap": true
                  }
                ],
                "width": "auto"
              },
              {
                "type": "Column",
                "spacing": "Small",
                "selectAction": {
                  "type": "Action.ToggleVisibility",
                  "targetElements": [
                    "cardContent${$index}",
                    "chevronDown${$index}",
                    "chevronUp${$index}"
                  ]
                },
                "verticalContentAlignment": "Center",
                "items": [
                  {
                    "type": "Image",
                    "id": "chevronDown${$index}",
                    "url": "https://adaptivecards.io/content/down.png",
                    "width": "20px",
                    "altText": "collapsed"
                  },
                  {
                    "type": "Image",
                    "id": "chevronUp${$index}",
                    "url": "https://adaptivecards.io/content/up.png",
                    "width": "20px",
                    "altText": "expanded",
                    "isVisible": false
                  }
                ],
                "width": "auto"
              }
            ]
          },
          {
            "type": "Container",
            "id": "cardContent${$index}",
            "isVisible": false,
            "items": [
              {
                "type": "Container",
                "items": [
                  {
                    "type": "Image",
                    "alt": "image${$index}",
                    "url": "https://rapydattach.blob.core.windows.net/rapyd-attachments/${attachment}",
                    "msTeams": {
                      "allowExpand": true
                    }
                  },
                  {
                    "type": "Container",
                    "items": [
                      {
                        "type": "Input.Text",
                        "id": "comment${$index}",
                        "placeholder": "Add your comment here."
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "type": "Container",
        "style": "emphasis",
        "items": [
          {
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column",
                "items": [
                  {
                    "type": "TextBlock",
                    "horizontalAlignment": "Right",
                    "text": "Amount to be Reimbursed"
                  }
                ],
                "width": "stretch"
              },
              {
                "type": "Column",
                "items": [
                  {
                    "type": "TextBlock",
                    "weight": "Bolder",
                    "text": "${amount}"
                  }
                ],
                "width": "auto"
              },
              {
                "type": "Column",
                "width": "auto"
              }
            ]
          }
        ],
        "bleed": true
      },
      {
        "type": "ColumnSet",
        "columns": [
          {
            "type": "Column",
            "selectAction": {
              "type": "Action.ToggleVisibility",
              "targetElements": [
                "cardContent4",
                "showHistory",
                "hideHistory"
              ]
            },
            "verticalContentAlignment": "Center",
            "items": [
              {
                "type": "TextBlock",
                "id": "showHistory",
                "horizontalAlignment": "Right",
                "color": "Accent",
                "text": "Show history",
                "wrap": true
              },
              {
                "type": "TextBlock",
                "id": "hideHistory",
                "horizontalAlignment": "Right",
                "color": "Accent",
                "text": "Hide history",
                "wrap": true,
                "isVisible": false
              }
            ],
            "width": 1
          }
        ]
      },
      {
        "type": "Container",
        "id": "cardContent4",
        "isVisible": false,
        "items": [
          {
            "type": "Container",
            "$data": "${history}",
            "items": [
              {
                "type": "TextBlock",
                "text": "${text}",
                "isSubtle": true,
                "wrap": true
              }
            ]
          }
        ]
      },
      {
        "$when": "${show == true}",
        "type": "Container",
        "items": [
          {
            "type": "ActionSet",
            "actions": [
              {
                "$when":"${by == \"manager\"}",
                "type": "Action.Execute",
                "title": "Approve",
                "style": "positive",
                "verb":"${by}_approve",
                "data": {
                  "tostr": "${tostr}",
                  "action": "approve"
                }
              },
              {
                "$when":"${by == \"finance\"}",
                "type": "Action.ShowCard",
                "title": "Approve",
                "style": "destructive",
                "card": {
                  "type": "AdaptiveCard",
                  "body": [
                    {
                      "type": "Input.Text",
                      "id": "amount",
                      "placeholder": "Please enter the amount to send.",
                      "isMultiline": true
                    }
                  ],
                  "actions": [
                    {
                      "type": "Action.Submit",
                      "title": "Transfer",
                      "data": {
                          "msteams": {
                              "type": "task/fetch"
                          },
                          "reimbdata": "${tostr}"
                      }
                    }
                  ],
                  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
                }
              },
              {
                "type": "Action.ShowCard",
                "title": "Reject",
                "style": "destructive",
                "card": {
                  "type": "AdaptiveCard",
                  "body": [
                    {
                      "type": "Input.Text",
                      "id": "RejectCommentID",
                      "placeholder": "Please specify an appropriate reason for rejection.",
                      "isMultiline": true
                    }
                  ],
                  "actions": [
                    {
                      "type": "Action.Submit",
                      "title": "Send",
                      "data": {
                        "id": "_qkQW8dJlUeLVi7ZMEzYVw",
                        "action": "reject"
                      }
                    }
                  ],
                  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
                }
              }
            ]
          }
        ]
      }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2",
    "fallbackText": "This card requires Adaptive Cards v1.2 support to be rendered properly."
  }
  