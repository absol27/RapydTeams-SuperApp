<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
    	<title>RapydTeams</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	
	<link rel="stylesheet" href="css/style.css">
<script>
  var globalCount = 1;
</script>

  
</head>
      
<body>
  <section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
					<div class="login-wrap p-0">
		      	<h3 class="mb-4 text-center">Upload Data</h3>
		      	<form ref='uploadForm' 
			id='uploadForm' 
			action='/upload' 
			method='post' 
			encType="multipart/form-data">
              <div id="mainForm">
                <input type="text" id="reimbinfo" name="reimbinfo" value= "{{ reimbinfo }}" hidden/>
                <div class="form-group">
                  <input type="number" class="form-control" placeholder="Price" id="price0" name="price0" required>
                </div>

                <div class="form-group">
                  <input type="text" class="form-control" placeholder="Description" id="subject0" name="subject0" required>
                </div>

                <div class="form-group">
                  <input type="file" class="form-control" placeholder="Attachment" id="attachment0" name="attachment0" required>
                </div>
                  
              </div>
              
        				<div class="form-group">
	            	<button type="submit" class="form-control btn btn-primary submit px-3">Submit</button>
	              </div>
              
	            <div class="form-group d-md-flex">
								<div class="w-50 text-md-right">
                  <button type="button" id="my-button" class="form-control btn btn-primary submit px-3">Add</button>


                  <script>
                    async function addinputFields(){
                  
                      console.log("*****");
                      
                      const div = document.getElementById('mainForm');
                      div.outerHTML += `
                  <br><br>

                        <div class="form-group">
                  <input type="number" class="form-control" placeholder="Price" id="price${globalCount}" name="price${globalCount}" required>
                </div>

                <div class="form-group">
                  <input type="text" class="form-control" placeholder="Description" id="subject${globalCount}" name="subject${globalCount}" required>
                </div>

                <div class="form-group">
                  <input type="file" class="form-control" placeholder="Attachment" id="attachment${globalCount}" name="attachment${globalCount}" required>
                </div>
                  `
                      globalCount = globalCount + 1;
                      }
                      document.getElementById('my-button').addEventListener('click', addinputFields);
                  </script>

								</div>
	            </div>
	          </form>

				</div>
			</div>
		</div>
	</section>

</body>
</html>
